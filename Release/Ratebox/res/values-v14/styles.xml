<resources>

    <!--
        Base application theme for API 14+. This theme completely replaces
        AppBaseTheme from BOTH res/values/styles.xml and
        res/values-v11/styles.xml on API 14+ devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <!-- API 14 theme customizations can go here. -->
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/bar_color</item>
        <item name="android:titleTextStyle">@style/MyActionBar.ActionBar.TitleTextStyle</item>
    </style>

    <style name="MyActionBar.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/transparent</item>
    </style>

    <style name="CustomDialog" parent="@android:style/Theme.Holo.Dialog">
        <item name="android:width">400dip</item>
        <item name="android:height">30dip</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:typeface">sans</item>
        <item name="android:alertDialogStyle">@style/CustomDialogStyle</item>
    </style>

    <style name="CustomDialogStyle">
        <item name="android:bottomBright">@color/dialog_color</item>
        <item name="android:bottomDark">@color/dialog_color</item>
        <item name="android:bottomMedium">@color/dialog_color</item>
        <item name="android:centerBright">@color/dialog_color</item>
        <item name="android:centerDark">@color/dialog_color</item>
        <item name="android:centerMedium">@color/dialog_color</item>
        <item name="android:fullBright">@color/dialog_color</item>
        <item name="android:fullDark">@color/dialog_color</item>
        <item name="android:topBright">@color/dialog_color</item>
        <item name="android:topDark">@color/dialog_color</item>
    </style>

</resources>
